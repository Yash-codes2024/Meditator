<body>
    <h1>Let's Meditate</h1>

    <div id="video-container">
        <img id="video-feed" src="/video_feed" alt="Camera Feed">
    </div>
    
    <input type="number" id="timeInput" placeholder="Enter time in minutes" min="1" required>
    <div id="timer">00:00</div>
    
    <button onclick="startSession()">Start</button>
    <button onclick="resetSession()">Reset</button>
    
   
   <script>
let countdown;
let timeLeft;
let isRunning = false;

function startSession() {
    const inputTime = document.getElementById("timeInput").value;
    if (!inputTime || inputTime < 1) {
        alert("Please enter a valid time in minutes.");
        return;
    }

    timeLeft = inputTime * 60; // Convert minutes to seconds
    if (isRunning) return; 
    
    isRunning = true;
    fetch('/start'); // Start the camera on the server
    startTimer();
}

function startTimer() {
    countdown = setInterval(function() {
        if (timeLeft <= 0) {
            clearInterval(countdown);
            alert("Time's up! 🧘‍♀️");
            playSound();
            isRunning = false;
            fetch('/stop'); // Stop the camera
        } else {
            timeLeft--;
            displayTime(timeLeft);
        }
    }, 1000);
}

function resetSession() {
    clearInterval(countdown);
    timeLeft = 0;
    displayTime(timeLeft);
    isRunning = false;
    fetch('/stop'); // Stop the camera
}

function displayTime(seconds) {
    const minutes = Math.floor(seconds / 60);
    const remainingSeconds = seconds % 60;
    const formattedTime = `${padZero(minutes)}:${padZero(remainingSeconds)}`;
    document.getElementById("timer").innerText = formattedTime;
}

function padZero(num) {
    return num < 10 ? `0${num}` : num;
}

function playSound() {
    const audio = new Audio('https://www.soundjay.com/button/beep-07.wav');
    audio.play();
}
   </script>
</body>
